      <value name="PASSWORD">
        <shadow type="text">
          <field name="TEXT">password</field>
        </shadow>
      </value>
    </block>
    <block type="yolobit_mqtt_connect_default_servers">
      <value name="USERNAME">
        <shadow type="text">
